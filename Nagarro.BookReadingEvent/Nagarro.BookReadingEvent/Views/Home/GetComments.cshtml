@model IEnumerable<Nagarro.BookReadingEvent.Shared.CommentDTO>
<h2>Comments of Different Users</h2>
<table class="table table-bordered table-responsive table-hover table-striped table-bordered table-responsive table-condensed">
    <tr class="warning">
        <th>
            Comments
        </th>
        <th>
            Event Date
        </th>
        <th>
            User
        </th>
        

    </tr>

    @foreach (var item in Model)
    {
        <tr class="info">

            <td>
                @Html.DisplayFor(modelItem => item.Comment1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePosted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            
        </tr>
     }

</table>
